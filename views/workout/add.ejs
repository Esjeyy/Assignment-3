<%- include ../Partials/Navbar.ejs %>   
<div class="container">
    <div class ="row"> 
        <div class="col-md-offset-3 col-md-6">
            <h1><%=title %></h1>
            <form class = "form" method = "post"> 
                <div class="form-group">
                    <label for = "workoutNameTextField"><b>Name of workout</b></label>
                    <input type = "text" class= "form-control"
                    id="workoutNameTextField"
                    placeholder = "Enter the name of the workout"
                    name ="Workout" required>
                </div> 

                <div class="form-group">
                    <label for = "repsNumberTextField"><b>reps</b></label>
                    <input type = "text" class= "form-control"
                    id="repsNumberTextField"
                    placeholder = "Enter the number of reps"
                    name ="reps" required>
                </div> 

                <div class="form-group">
                    <label for = "repsNumberTextField"><b>sets</b></label>
                    <input type = "text" class= "form-control"
                    id="repsNumberTextField"
                    placeholder = "Enter the number of sets"
                    name ="sets" required>
                </div> 

                <div class="form-group">
                    <label for = "weightTextField"><b>weight</b></label>
                    <input type = "text" class= "form-control"
                    id="weightTextField"
                    placeholder = "Enter the number of weight in kilograms"
                    name ="weight" required>
                </div> 
                <br>
                <button class= "btn btn-success" type="submit"> 
                    <i class="fa-solid fa-floppy-disk"></i> Save
                </button>

                <a href = "/workout-list" class="btn btn-warning">
                    <i class="fa-solid fa-xmark"></i> Cancel </a>
            </form>
        </div>
    </div> 
</div>



